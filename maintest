<body>
  <h2>✨ 나의 AI 육각형 테스트 ✨</h2>

  <div class="chart-container">
    <!-- 영롱한 육각형 배경 -->
    <svg viewBox="0 0 200 200">
      <defs>
        <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color: #ffb6ff; stop-opacity:1" />
          <stop offset="100%" style="stop-color: #89f7fe; stop-opacity:1" />
        </linearGradient>
      </defs>

      <!-- 육각형 -->
      <polygon class="hexagon" points="100,10 190,55 190,145 100,190 10,145 10,55"/>

      <!-- 반짝이는 점 -->
      <circle class="sparkle" cx="160" cy="40" r="5"/>
      <circle class="sparkle" cx="40" cy="160" r="4" style="animation-delay: 0.5s"/>
      <circle class="sparkle" cx="180" cy="100" r="3" style="animation-delay: 1s"/>
    </svg>

    <!-- 레이더 차트 -->
    <canvas id="myRadarChart"></canvas>
  </div>

  <script>
    const ctx = document.getElementById('myRadarChart');

    new Chart(ctx, {
      type: 'radar',
      data: {
        labels: ['주체적 의사결정', '비판적 사고', '윤리적 판단', 'AI 소통', '데이터 통제', '창의적 활용'],
        datasets: [{
          label: '내 능력치',
          data: [3, 4, 2, 5, 3, 4], // 점수 예시
          fill: true,
          backgroundColor: 'rgba(255, 105, 180, 0.2)',
          borderColor: 'rgba(255, 105, 180, 1)',
          pointBackgroundColor: 'rgba(255, 105, 180, 1)',
          pointBorderColor: '#fff',
          pointHoverBackgroundColor: '#fff',
          pointHoverBorderColor: 'rgba(255, 105, 180, 1)'
        }]
      },
      options: {
        responsive: true,
        scales: {
          r: {
            angleLines: { color: '#ddd' },
            grid: { color: '#eee' },
            suggestedMin: 0,
            suggestedMax: 5,
            ticks: {
              stepSize: 1,
              backdropColor: 'transparent'
            },
            pointLabels: {
              color: '#333',
              font: { size: 12 }
            }
          }
        },
        plugins: {
          legend: { display: false }
        }
      }
    });
  </script>
