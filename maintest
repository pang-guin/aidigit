    .chart-container {
      position: relative;
      width: 350px;
      height: 350px;
    }

    svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
    }

    canvas {
      position: relative;
      z-index: 1;
    }

    .hexagon {
      stroke: #555;
      stroke-width: 3;
      fill: url(#grad);
      filter: drop-shadow(0 0 12px rgba(255, 182, 255, 0.7));
    }

    /* 반짝이는 효과 */
    .sparkle {
      fill: white;
      opacity: 0;
      animation: sparkle 2s infinite;
    }

    @keyframes sparkle {
      0%, 100% { opacity: 0; }
      50% { opacity: 1; }
    }
  </style>
